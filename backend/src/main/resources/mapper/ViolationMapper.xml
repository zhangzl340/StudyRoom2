<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyroom.mapper.ViolationMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.studyroom.entity.Violation">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="reservationId" column="reservation_id" />
        <result property="type" column="type" />
        <result property="description" column="description" />
        <result property="deductCredit" column="deduct_credit" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 根据用户ID查询违规记录 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM violations
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <!-- 根据预约ID查询违规记录 -->
    <select id="selectByReservationId" resultMap="BaseResultMap">
        SELECT * FROM violations
        WHERE reservation_id = #{reservationId}
        ORDER BY created_at DESC
    </select>

    <!-- 根据类型查询违规记录 -->
    <select id="selectByType" resultMap="BaseResultMap">
        SELECT * FROM violations
        WHERE type = #{type}
        ORDER BY created_at DESC
    </select>

    <!-- 根据状态查询违规记录 -->
    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM violations
        WHERE status = #{status}
        ORDER BY created_at DESC
    </select>

    <!-- 根据日期范围查询违规记录 -->
    <select id="selectByDateRange" resultMap="BaseResultMap">
        SELECT * FROM violations
        WHERE DATE(created_at) BETWEEN #{startDate} AND #{endDate}
        ORDER BY created_at DESC
    </select>

</mapper>