<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyroom.mapper.CheckInMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.studyroom.entity.CheckIn">
        <id property="id" column="id" />
        <result property="reservationId" column="reservation_id" />
        <result property="userId" column="user_id" />
        <result property="checkInTime" column="check_in_time" />
        <result property="checkOutTime" column="check_out_time" />
        <result property="checkInMethod" column="check_in_method" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 根据用户ID查询签到记录 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM check_ins
        WHERE user_id = #{userId}
        ORDER BY check_in_time DESC
    </select>

    <!-- 根据预约ID查询签到记录 -->
    <select id="selectByReservationId" resultMap="BaseResultMap">
        SELECT * FROM check_ins
        WHERE reservation_id = #{reservationId}
        ORDER BY check_in_time DESC
    </select>

    <!-- 根据状态查询签到记录 -->
    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT * FROM check_ins
        WHERE status = #{status}
        ORDER BY check_in_time DESC
    </select>

    <!-- 查询用户当前有效的签到记录 -->
    <select id="selectCurrentByUserId" resultMap="BaseResultMap">
        SELECT * FROM check_ins
        WHERE user_id = #{userId}
          AND status IN ('checked_in', 'left')
        ORDER BY check_in_time DESC
            LIMIT 1
    </select>

    <!-- 根据日期范围查询签到记录 -->
    <select id="selectByDateRange" resultMap="BaseResultMap">
        SELECT * FROM check_ins
        WHERE DATE(created_at) BETWEEN #{startDate} AND #{endDate}
        ORDER BY created_at DESC
    </select>

</mapper>