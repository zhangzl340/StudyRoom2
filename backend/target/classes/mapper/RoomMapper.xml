<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyroom.mapper.RoomMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.studyroom.entity.Room">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="location" column="location" />
        <result property="rowsCount" column="rows_count" />
        <result property="colsCount" column="cols_count" />
        <result property="openTime" column="open_time" />
        <result property="closeTime" column="close_time" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 查询可用自习室 -->
    <select id="selectAvailableRooms" resultMap="BaseResultMap">
        SELECT * FROM rooms
        WHERE status = 'available'
          AND CURRENT_TIME BETWEEN open_time AND close_time
        ORDER BY location, name
    </select>

    <!-- 根据位置查询自习室 -->
    <select id="selectByLocation" resultMap="BaseResultMap">
        SELECT * FROM rooms WHERE location = #{location} ORDER BY name
    </select>

</mapper>